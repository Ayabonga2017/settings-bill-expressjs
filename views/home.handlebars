  </form>
      <h5>Totals</h5>
          <table>
            <tr>
              <td>
                <a href="/actions/call">Call total</a>
              </td>
              //get values from index js that are from the factory
              <td>R<span class="callTotalSettings" >{{valuesSum.call}}</span> </td>
            </tr>
            <tr>
              <td>
                <a href="/actions/sms">Sms total</a>
              </td>
              <td>R<span class="smsTotalSettings">{{valuesSum.sms}}</span></td>
            </tr>
            <tr>
              <td>
                <a href="/actions">Total</a>
              </td>
              <td> R<span class="totalSettings">{{valuesSum.total}}</span></td>
            </tr>
          </table>



    </div>
    <div class="six columns">
      <h5>Settings</h5>
      <form class="" action="/settings" method="post">
        <label for="exampleEmailInput">Call Cost</label>
        <input class="u-full-width callCostSetting" type="number" name="callCost" placeholder="enter call cost"value="{{settings.call}}">
        <label for="exampleEmailInput">Sms Cost</label>
        <input class="u-full-width callCostSetting" type="number" name="smsCost" placeholder="enter sms cost" value="{{settings.sms}}">

        <label for="">Warning Level</label>
        <input class="u-full-width warningLevelSetting " type="number" name="warningLevel" placeholder="enter warning level"value="{{settings.warning}}">
        <label for="">Critical Level</label>
        <input class="u-full-width criticalLevelSetting" type="number" name="criticalLevel" placeholder="enter critical level"value="{{settings.critical}}">
        <br>
        <button class="button-primary updateSettings"type="submit">Update settings</button>
      </form>

    </div>
  </div>

